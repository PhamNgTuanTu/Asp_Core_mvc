            </div>
            @*<div class="form-group">
                    <label asp-for="Hinh" class="control-label"></label>
                    <input asp-for="Hinh" class="form-control" />
                    <span asp-validation-for="Hinh" class="text-danger"></span>
                </div>*@
            <div class="custom-file">
                <input type="file" class="custom-file-input" id="ful" name="ful" />
                <label class="custom-file-label" for="ful">Choose-File</label>
            </div>
            <div class="form-group">
                <img id="imgPre" src="~/img/noimg.jpg" alt="No-Image" class="img-thumbnail" />
